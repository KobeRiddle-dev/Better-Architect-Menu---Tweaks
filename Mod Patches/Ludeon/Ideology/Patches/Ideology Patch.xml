<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Move Culture Category -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/DesignationCategoryDef[defName="Ideology"]/modExtensions/li[@Class="BetterArchitect.NestedCategoryExtension"]/parentCategory</xpath>
        <value>
            <parentCategory>Misc</parentCategory>
        </value>
    </Operation>

    <!-- Move Memorial things into Culture -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[designationCategory="Ferny_Memorial"]/designationCategory</xpath>
        <value>
            <designationCategory>Ideology</designationCategory>
        </value>
    </Operation>

</Patch>