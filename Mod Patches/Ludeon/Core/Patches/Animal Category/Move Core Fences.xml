<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <id>MoveFences</id>
        <defaultValue>True</defaultValue>
        <label>Move Fences. (Default: True)</label>
        <tooltip>Moves fences and fence gates into Structure/Walls and Structure/Doors, respectively.</tooltip>
        <category>KobeRiddle_AnimalCategory</category>
        <order>999</order>

        <operations>

            <!-- Move Fence -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="Fence"]/designationCategory</xpath>
                <value>
                    <designationCategory>Ferny_Walls</designationCategory>
                </value>
            </li>

            <!-- Move Fence Gate -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[defName="FenceGate"]/designationCategory</xpath>
                <value>
                    <designationCategory>Ferny_Doors</designationCategory>
                </value>
            </li>

        </operations>

    </Operation>

</Patch>