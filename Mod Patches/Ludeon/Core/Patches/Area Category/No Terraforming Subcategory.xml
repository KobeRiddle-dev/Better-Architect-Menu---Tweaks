<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <id>RemoveTerraforming</id>
        <defaultValue>True</defaultValue>
        <label>Remove Terraforming Subcategory. (Default: True)</label>
        <tooltip>Moves everything from Area/Terraforming into Area/Other</tooltip>
        <category>KobeRiddle_AreaCategory</category>
        <order>2</order>

        <operations>

            <!-- Move everything in Terraforming to Area/Other -->
            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[designationCategory="Ferny_Terraforming"]/designationCategory</xpath>
                <value>
                    <designationCategory>Temperature</designationCategory>
                </value>
            </li>

        </operations>

    </Operation>

</Patch>