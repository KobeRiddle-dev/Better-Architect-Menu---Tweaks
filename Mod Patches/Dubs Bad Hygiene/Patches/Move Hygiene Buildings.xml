<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Move Toilets -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="PitLatrine" or @Name="DubsDirtyTerletBase"]</xpath>
        <value>
            <designationCategory>KobeRiddle_Hygiene</designationCategory>
        </value>
    </Operation>

    <!-- Move Showers and Baths -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[@Name="DubsDirtyShowerBase" or defName="BathMat" or @Name="DubsDirtyBathtubBase"]</xpath>
        <value>
            <designationCategory>KobeRiddle_Hygiene</designationCategory>
        </value>
    </Operation>

    <!-- Move Stall Door -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="ToiletStallDoor"]</xpath>
        <value>
            <designationCategory>KobeRiddle_Hygiene</designationCategory>
        </value>
    </Operation>

    <!-- Move Sinks -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="WashBucket" or @Name="DubsDirtyBasinBase"]</xpath>
        <value>
            <designationCategory>KobeRiddle_Hygiene</designationCategory>
        </value>
    </Operation>

</Patch>