<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <id>MoveDubsTemperatureBuildings</id>
        <defaultValue>True</defaultValue>
        <label>Move radiators to Area. (Default: True)</label>
        <tooltip>Moves radiators to either Heating or Temperature, depending on settings in Area Category..</tooltip>
        <category>KobeRiddle_WaterCategory</category>
        <order>4</order>

        <operations>

            <!-- Move Radiators -->
            <li Class="PatchOperationConditional">
                <xpath>Defs/ThingDef[designationCategory="Ferny_Heating"]/designationCategory</xpath>

                <match Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="BaseRadiator"]</xpath>
                    <value>
                        <designationCategory>Ferny_Heating</designationCategory>
                    </value>
                </match>

                <nomatch Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="BaseRadiator"]</xpath>
                    <value>
                        <designationCategory>Ferny_AirManagement</designationCategory>
                    </value>
                </nomatch>

            </li>

        </operations>

    </Operation>

</Patch>